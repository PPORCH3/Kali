#Script d'installation des outils nÃ©cessaire
cd /$USERNAME/Scripts

apt-get -y update 
apt-get -y upgrade

clear
#Kick Them Out
echo Installer Kick Them Out \? 
echo Y\/N
read var1

if [ $var1 = "Y" ] || [ $var1 = "y" ]
then

git clone https://github.com/k4m4/kickthemout.git
cd kickthemout
pip install -r requirements.txt

else 

echo Au suivant

fi

clear
#Macchanger 1 & 2
echo Installer Macchanger ?
echo Y\/N
read var2

if [ $var2 = "Y" ] || [ $var2 = "y" ]
then

apt-get -y install macchanger

else

echo Au suivant alors

fi

clear
#proxyon & proxyoff
echo Installer Proxychains ?
echo Y\/N
read var3

if [ $var3 = "Y" ] || [ $var3 = "y" ]
then

apt-get -y install tor proxychains

else

echo Tu es sur ?

fi

apt-get install figlet
clear
#tor2
echo Installer Tor ?
echo Y\/N
read var4

if [ $var4 = "Y" ] || [ $var4 = "y" ]
then

apt-get -y install aria2
echo 64 ou 32 bits \? \(64\/32\)
read sys
	if [ $sys = "64" ]
	then

		aria2c https://www.torproject.org/dist/torbrowser/7.0.1/tor-browser-linux64-7.0.1_en-US.tar.xz
		tar -Jxvf tor-browser-linux64-7.0.1_en-US.tar.xz ; sleep 5
		rm tor-browser-linux64-7.0.1_en-US.tar.xz
		
	elif [ $sys = "32" ]
	then 

		aria2c https://www.torproject.org/dist/torbrowser/7.0.2/tor-browser-linux32-7.0.2_en-US.tar.xz
		tar -Jxvf tor-browser-linux32-7.0.2_en-US.tar.xz ; sleep 5
		rm tor-browser-linux32-7.0.2_en-US.tar.xz

	else

		figlet -ck ERREUR ; sleep 5 ; exit 

	fi
else
echo Le dernier alors
fi
sed -i -e "s/if \[ \"\`id -u\`\" -eq 0 \]\; then/if \[ \"\`id -u\`\" -eq 1 \]\; then/g" /$USERNAME/Scripts/tor-browser_en-US/Browser/start-tor-browser
chown -hR root /$USERNAME/Scripts/tor-browser_en-US

clear
#Virus
echo Installer Clamav ?
echo Y\/N
read var5

if [ $var5 = "Y" ] || [ $var5 = "y" ]
then

apt-get -y install clamav

else

echo "Bon c'est fini alors Bye"

fi

clear
#Finish
apt-get -y update
apt-get -y upgrade
clear
figlet -ck Job Done Bye
sleep 2
 
#WARNING#
figlet ATTENTION
echo "Avant de lancer le raccourci de SeToolKit veuillez le lancer manuellement pour accepter les conditions d'utilistaion"
read -rn1 -p "Press any key to continue"

